{
  "schemaVersion": 1,
  "id": "betterportals",
  "version": "${version}",

  "name": "BetterPortals",
  "description": "Adds see-through portals that can be used without any pesky loading screen.",
  "authors": [
    "johni0702"
  ],
  "contact": {
    "sources": "https://github.com/Johni0702/BetterPortals"
  },

  "license": "GPL-3.0-or-later",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "de.johni0702.minecraft.betterportals.impl.BetterPortalsMod::init"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "de.johni0702.minecraft.betterportals.impl.BetterPortalsMod::clientInit"
      }
    ]
  },
  "mixins": [
    "mixins.betterportals.json",
    "mixins.betterportals.view.json",
    "mixins.betterportals.transition.json",
    "mixins.betterportals.portal.json"
  ],

  "depends": {
    "fabricloader": ">=0.4.0",
    "fabric": "*",
    "fabric-language-kotlin": ">=1.3.50"
  },
  "suggests": {
  },

  "custom": {
    "modmenu:api": true
  }
}
