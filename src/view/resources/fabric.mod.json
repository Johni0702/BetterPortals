{
  "schemaVersion": 1,
  "id": "betterportals-view",
  "version": "${version}",

  "name": "BetterPortals - ViewAPI",
  "description": "Handles client-server syncing of multiple worlds and multi-pass rendering.",
  "authors": [
    "johni0702"
  ],
  "contact": {
    "sources": "https://github.com/Johni0702/BetterPortals"
  },

  "license": "GPL-3.0-or-later",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "de.johni0702.minecraft.view.impl.BPViewAPIMod"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "de.johni0702.minecraft.view.impl.BPViewAPIMod"
      }
    ]
  },
  "mixins": [
    "mixins.betterportals.view.json"
  ],

  "depends": {
    "fabricloader": ">=0.4.0",
    "fabric": "*",
    "fabric-language-kotlin": ">=1.3.50",
    "betterportals": "${version}"
  },

  "custom": {
    "modmenu:api": true,
    "modmenu:parent": "betterportals"
  }
}
